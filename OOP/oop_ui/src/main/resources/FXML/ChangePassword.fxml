<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="800.0" prefWidth="1280.0" styleClass="login-container" stylesheets="@../css/main.css,@../css/forms.css,@../css/buttons.css,@../css/layouts.css,@../css/login.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.oop.Control.ChangePasswordController">
   <children>
      <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="50.0">
         <children>
            <VBox alignment="CENTER" maxWidth="450.0" prefWidth="450.0" spacing="20.0" styleClass="login-box">
               <children>

                  <!-- Form Title -->
                  <VBox alignment="CENTER" spacing="5.0">
                     <children>
                        <Text styleClass="form-title" text="Đổi mật khẩu" />
                        <Label styleClass="app-subtitle" text="Cập nhật mật khẩu cho tài khoản của bạn" />
                     </children>
                  </VBox>

                  <!-- Change Password Form -->
                  <VBox spacing="16.0" styleClass="login-form">
                     <children>
                        <!-- Account -->
                        <VBox spacing="8.0" styleClass="form-group">
                           <children>
                              <Label styleClass="form-label" text="Tài khoản" />
                              <TextField fx:id="tfAccount" prefHeight="50.0" promptText="Nhập tài khoản" styleClass="login-input" />
                           </children>
                        </VBox>

                        <!-- Current Password -->
                        <VBox spacing="8.0" styleClass="form-group">
                           <children>
                              <Label styleClass="form-label" text="Mật khẩu hiện tại *" />
                              <TextField fx:id="tfCurrent" prefHeight="50.0" promptText="Nhập mật khẩu hiện tại" styleClass="login-input" />
                           </children>
                        </VBox>

                        <!-- New Password -->
                        <VBox spacing="8.0" styleClass="form-group">
                           <children>
                              <Label styleClass="form-label" text="Mật khẩu mới *" />
                              <PasswordField fx:id="pfNew" prefHeight="50.0" promptText="Tối thiểu 8 ký tự" styleClass="login-input" />
                              <TextField fx:id="tfNew" managed="false" prefHeight="50.0" promptText="Tối thiểu 8 ký tự" styleClass="login-input" visible="false" />
                           </children>
                        </VBox>

                        <!-- Password Strength -->
                        <VBox spacing="8.0" styleClass="form-group">
                           <children>
                              <Label styleClass="form-hint" text="Độ mạnh mật khẩu" />
                              <HBox alignment="CENTER_LEFT" spacing="12.0">
                                 <children>
                                    <Label fx:id="lblStrength" prefWidth="80.0" styleClass="label-medium" />
                                    <ProgressBar fx:id="pbStrength" prefHeight="8.0" progress="0.0" styleClass="progress-bar" HBox.hgrow="ALWAYS" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>

                        <!-- Confirm Password -->
                        <VBox spacing="8.0" styleClass="form-group">
                           <children>
                              <Label styleClass="form-label" text="Xác nhận mật khẩu mới *" />
                              <PasswordField fx:id="pfConfirm" prefHeight="50.0" promptText="Nhập lại mật khẩu mới" styleClass="login-input" />
                              <TextField fx:id="tfConfirm" managed="false" prefHeight="50.0" promptText="Nhập lại mật khẩu mới" styleClass="login-input" visible="false" />
                           </children>
                        </VBox>

                        <!-- Show Password Checkbox -->
                        <HBox alignment="CENTER_LEFT" spacing="16.0">
                           <children>
                              <CheckBox fx:id="cbShow" styleClass="form-checkbox" text="Hiển thị mật khẩu" />
                              <Hyperlink fx:id="linkForgot" onAction="#onForgot" styleClass="forgot-password-link" text="Quên mật khẩu?" />
                           </children>
                        </HBox>

                        <!-- Error message -->
                        <Label fx:id="lblError" managed="false" maxWidth="Infinity" styleClass="error-message" visible="false" wrapText="true" />

                        <!-- Action Buttons -->
                        <HBox alignment="CENTER_RIGHT" spacing="12.0" styleClass="form-actions">
                           <children>
                              <Button fx:id="btnCancel" cancelButton="true" mnemonicParsing="false" onAction="#onCancel" prefHeight="45.0" prefWidth="120.0" styleClass="form-button-secondary" text="Hủy" />
                              <Button fx:id="btnSave" defaultButton="true" mnemonicParsing="false" onAction="#onSave" prefHeight="45.0" prefWidth="120.0" styleClass="form-button-primary" text="Lưu" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>

