<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="800.0" prefWidth="1280.0" spacing="10.0"
      xmlns="http://javafx.com/javafx/21"
      fx:controller="org.example.oop.Control.PaymentControl.PaymentHistoryController"
>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <children>
        <Label style="-fx-font-size:20px; -fx-font-weight:bold;" text="LỊCH SỬ THANH TOÁN"/>

        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Label text="Tìm kiếm:"/>
                <TextField fx:id="txtKeyword" prefWidth="300.0" promptText="Mã HĐ, tên khách..." HBox.hgrow="ALWAYS"/>

                <Label text="Trạng thái:"/>
                <ComboBox fx:id="cbStatus" prefWidth="150.0"/>

                <Label text="Từ ngày:"/>
                <DatePicker fx:id="dpFrom" prefWidth="140.0"/>

                <Label text="Đến ngày:"/>
                <DatePicker fx:id="dpTo" prefWidth="140.0"/>

                <Button fx:id="btnFilter" mnemonicParsing="false" text="Lọc"/>
            </children>
        </HBox>

        <TableView fx:id="tablePayments" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colPaymentId" prefWidth="100.0" text="Mã phiếu"/>
                <TableColumn fx:id="colInvoiceId" prefWidth="100.0" text="Mã Hóa đơn"/>
                <TableColumn fx:id="colCreatedAt" prefWidth="150.0" text="Ngày giờ"/>
                <TableColumn fx:id="colCustomer" prefWidth="180.0" text="Khách hàng"/>
                <TableColumn fx:id="colMethod" prefWidth="110.0" text="Phương thức"/>
                <TableColumn fx:id="colAmount" prefWidth="120.0" text="Số tiền"/>
                <TableColumn fx:id="colStatus" prefWidth="100.0" text="Trạng thái"/>
                <TableColumn fx:id="colStaff" prefWidth="120.0" text="Nhân viên"/>
                <TableColumn fx:id="colNote" prefWidth="250.0" text="Ghi chú"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>