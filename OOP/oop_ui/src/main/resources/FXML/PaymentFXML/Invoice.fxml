<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="750.0"
            prefWidth="1200.0"
            xmlns="http://javafx.com/javafx/22.0.1"
            fx:controller="org.example.oop.Control.PaymentControl.InvoiceController">
    <top>
        <VBox spacing="8.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label style="-fx-font-size:20px; -fx-font-weight:bold;" text="HÓA ĐƠN BÁN HÀNG"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button fx:id="btnNewInvoice" mnemonicParsing="false" text="Mới"/>
                        <Button fx:id="btnSaveInvoice" mnemonicParsing="false" text="Lưu"/>
                        <Button fx:id="btnPayInvoice" mnemonicParsing="false" text="Thanh toán"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Mã hóa đơn:"/>
                        <TextField fx:id="txtInvoiceCode" prefWidth="160" promptText="HD..."/>
                        <Label text="Ngày:"/>
                        <DatePicker fx:id="dpInvoiceDate"/>
                        <Label text="Thu ngân:"/>
                        <TextField fx:id="txtCashier" prefWidth="200" promptText="ID nhân viên"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>
    <left>
        <VBox prefWidth="320.0" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets left="10.0" right="10.0" top="10.0"/>
            </padding>
            <children>
                <TitledPane expanded="true" text="THÔNG TIN KHÁCH HÀNG">
                    <content>
                        <GridPane hgap="10" vgap="8">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                            <columnConstraints>
                                <ColumnConstraints percentWidth="30.0"/>
                                <ColumnConstraints percentWidth="70.0"/>
                            </columnConstraints>
                            <children>
                                <Label text="Họ tên:"/>
                                <TextField fx:id="txtCustomerName" GridPane.columnIndex="1"/>
                                <Label text="SĐT:" GridPane.rowIndex="1"/>
                                <TextField fx:id="txtCustomerPhone" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                            </children>
                        </GridPane>
                    </content>
                </TitledPane>
                <TitledPane expanded="true" text="THÊM MẶT HÀNG">
                    <content>
                        <VBox spacing="8.0">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                            <children>
                                <TextField fx:id="txtSearchProduct" promptText="Tìm sản phẩm theo mã/tên"/>
                                <HBox alignment="CENTER_LEFT" spacing="8.0">
                                    <children>
                                        <Label text="Số lượng:"/>
                                        <TextField fx:id="txtQuantity" prefWidth="60.0" text="1"/>
                                        <Region HBox.hgrow="ALWAYS"/>
                                        <Button fx:id="btnAddItem" onAction="#handleAddItem" mnemonicParsing="false"
                                                text="Thêm"/>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </content>
                </TitledPane>
            </children>
        </VBox>
    </left>
    <center>
        <VBox spacing="8.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets right="10.0" top="10.0"/>
            </padding>
            <children>
                <TableView fx:id="tableItems" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colName" prefWidth="350.0" text="Tên hàng"/>
                        <TableColumn fx:id="colQuantity" prefWidth="70.0" text="SL"/>
                        <TableColumn fx:id="colUnitPrice" prefWidth="120.0" text="Đơn giá"/>
                        <TableColumn fx:id="colTotal" prefWidth="150.0" text="Thành tiền"/>
                    </columns>
                </TableView>
                <HBox alignment="CENTER_RIGHT">
                    <children>
                        <Button fx:id="btnRemoveRow" mnemonicParsing="false" text="Xóa dòng"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
    <bottom>
        <GridPane hgap="12" vgap="8" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="12.0" left="12.0" right="12.0" top="12.0"/>
            </padding>
            <columnConstraints>
                <ColumnConstraints percentWidth="60.0"/>
                <ColumnConstraints percentWidth="40.0"/>
            </columnConstraints>
            <children>
                <TextArea fx:id="txtInvoiceNote" prefRowCount="3" promptText="Ghi chú cho hóa đơn..."/>
                <GridPane hgap="8" vgap="6" GridPane.columnIndex="1">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" prefWidth="120.0"/>
                        <ColumnConstraints hgrow="SOMETIMES"/>
                    </columnConstraints>
                    <children>
                        <Label text="Tổng tiền hàng:"/>
                        <TextField fx:id="txtSubtotal" editable="false" promptText="0" GridPane.columnIndex="1"/>
                        <Label text="Giảm giá:" GridPane.rowIndex="1"/>
                        <TextField fx:id="txtDiscountAmount" promptText="0" GridPane.columnIndex="1"
                                   GridPane.rowIndex="1"/>
                        <Label text="Thuế:" GridPane.rowIndex="2"/>
                        <TextField fx:id="txtTaxAmount" editable="false" promptText="0" GridPane.columnIndex="1"
                                   GridPane.rowIndex="2"/>
                        <Label style="-fx-font-weight: bold;" text="TỔNG CỘNG:" GridPane.rowIndex="3"/>
                        <TextField fx:id="txtGrandTotal" editable="false" promptText="0" style="-fx-font-weight: bold;"
                                   GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    </children>
                </GridPane>
            </children>
        </GridPane>
    </bottom>
</BorderPane>