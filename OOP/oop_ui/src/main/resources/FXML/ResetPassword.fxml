<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.oop.Control.ForgotPasswordController">
   <children>
      <VBox layoutX="400.0" layoutY="200.0" prefWidth="480.0" spacing="15.0" AnchorPane.leftAnchor="400.0" AnchorPane.rightAnchor="400.0" AnchorPane.topAnchor="200.0">
         <children>
            <Label alignment="CENTER" prefWidth="480.0" text="QUÊN MẬT KHẨU" textFill="#810482">
               <font>
                  <Font name="System Bold" size="28.0" />
               </font>
            </Label>

            <Label text="Bước 1: Nhập email để nhận mã xác nhận">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>

            <TextField fx:id="emailField" promptText="Nhập địa chỉ email của bạn">
               <font>
                  <Font size="16.0" />
               </font>
            </TextField>

            <Button fx:id="sendTokenButton" mnemonicParsing="false" onAction="#SendPassword" prefHeight="40.0" prefWidth="480.0" text="Gửi mã xác nhận" textFill="#0d14dd">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>

            <Label fx:id="messageLabel" prefHeight="60.0" prefWidth="480.0" textFill="RED" wrapText="true">
               <font>
                  <Font size="13.0" />
               </font>
            </Label>

            <Label text="Bước 2: Nhập mã xác nhận và mật khẩu mới">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>

            <TextField fx:id="tokenField" promptText="Nhập mã xác nhận">
               <font>
                  <Font size="16.0" />
               </font>
            </TextField>

            <TextField fx:id="newPasswordField" promptText="Mật khẩu mới">
               <font>
                  <Font size="16.0" />
               </font>
            </TextField>

            <TextField fx:id="confirmPasswordField" promptText="Xác nhận mật khẩu mới">
               <font>
                  <Font size="16.0" />
               </font>
            </TextField>

            <Button fx:id="resetPasswordButton" mnemonicParsing="false" onAction="#ResetPassword" prefHeight="40.0" prefWidth="480.0" text="Đặt lại mật khẩu" textFill="#0d14dd">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>

            <Button fx:id="backToLoginButton" mnemonicParsing="false" onAction="#BackToLogin" prefHeight="35.0" prefWidth="480.0" text="Quay lại đăng nhập">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
