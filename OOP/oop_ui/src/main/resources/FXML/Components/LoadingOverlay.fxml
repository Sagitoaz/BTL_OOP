<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/24.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           style="-fx-background-color: rgba(0, 0, 0, 0.7);"
           fx:id="loadingOverlay">
    <VBox alignment="CENTER" spacing="20"
          style="-fx-background-color: white; -fx-background-radius: 20px; -fx-padding: 40px 60px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 30, 0, 0, 10);">

        <!-- Loading Spinner -->
        <ProgressIndicator fx:id="progressIndicator"
                          prefWidth="80"
                          prefHeight="80"
                          style="-fx-progress-color: #0EA5E9;"/>

        <!-- Loading Text -->
        <Label fx:id="loadingText"
               text="Đang tải..."
               style="-fx-font-size: 18px; -fx-font-weight: 700; -fx-text-fill: #0369A1;"/>

        <!-- Loading Description -->
        <Label fx:id="loadingDescription"
               text="Vui lòng đợi trong giây lát"
               style="-fx-font-size: 14px; -fx-text-fill: #64748B;"/>
    </VBox>
</StackPane>

