<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.oop.Control.ProductCRUDController"
            prefWidth="1280.0" prefHeight="800.0">

    <center>
        <SplitPane dividerPositions="0.62">
            <!-- LEFT: Search + Table -->
            <VBox spacing="12">
                <padding><Insets top="12" right="8" bottom="12" left="12"/></padding>

                <TextField fx:id="searchField" promptText="Search products..." prefHeight="34"/>

                <TableView fx:id="productTable" VBox.vgrow="ALWAYS">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>

                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="60"/>
                        <TableColumn fx:id="skuColumn" text="SKU" minWidth="120"/>
                        <TableColumn fx:id="nameColumn" text="Name" minWidth="220"/>
                        <TableColumn fx:id="categoryColumn" text="Category" minWidth="160"/>
                        <TableColumn fx:id="quantityColumn" text="Quantity" maxWidth="100"/>
                        <TableColumn fx:id="priceColumn" text="Price" minWidth="140"/>
                    </columns>

                    <!-- Hiện thông báo khi bảng rỗng -->
                    <placeholder>
                        <Label text="No products found" style="-fx-text-fill: #777;"/>
                    </placeholder>
                </TableView>
            </VBox>

            <!-- RIGHT: Form -->
            <ScrollPane fitToWidth="true" fitToHeight="true" SplitPane.resizableWithParent="false">
                <content>
                    <VBox spacing="14" prefWidth="400" maxWidth="420">
                        <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

                        <Label text="Product Details" style="-fx-font-size:18px; -fx-font-weight:bold;"/>

                        <GridPane hgap="10" vgap="10">
                            <columnConstraints>
                                <ColumnConstraints minWidth="120" halignment="RIGHT"/>
                                <ColumnConstraints hgrow="ALWAYS"/>
                            </columnConstraints>

                            <Label text="SKU:" GridPane.rowIndex="0"/>
                            <TextField fx:id="skuField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                            <Label text="Name:" GridPane.rowIndex="1"/>
                            <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                            <Label text="Type:" GridPane.rowIndex="2"/>
                            <ComboBox fx:id="typeBox" prefWidth="220" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                            <Label text="Category:" GridPane.rowIndex="3"/>
                            <ComboBox fx:id="categoryBox" prefWidth="220" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                            <Label text="Quantity:" GridPane.rowIndex="4"/>
                            <TextField fx:id="quantityField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                            <Label text="Unit:" GridPane.rowIndex="5"/>
                            <TextField fx:id="unitField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

                            <Label text="Unit Price:" GridPane.rowIndex="6"/>
                            <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

                            <Label text="Supplier:" GridPane.rowIndex="7"/>
                            <TextField fx:id="supplierField" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

                            <Label text="Description:" GridPane.rowIndex="8"/>
                            <TextArea fx:id="descriptionArea" prefRowCount="4"
                                      GridPane.columnIndex="1" GridPane.rowIndex="8"/>
                        </GridPane>

                        <HBox spacing="10" alignment="CENTER_RIGHT">
                            <Button fx:id="saveButton" text="Save" onAction="#onSaveButton" defaultButton="true"/>
                            <Button fx:id="clearButton" text="Clear" onAction="#onClearButton" cancelButton="true"/>
                        </HBox>
                    </VBox>
                </content>
            </ScrollPane>
        </SplitPane>
    </center>

    <!-- BOTTOM -->
    <bottom>
        <HBox spacing="10" alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
            <padding><Insets top="10" right="12" bottom="10" left="12"/></padding>

            <Button fx:id="deleteButton" text="Delete Selected" onAction="#onDeleteButton"
                    style="-fx-background-color:#d32f2f; -fx-text-fill:white;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="statusLabel" text="Ready" style="-fx-text-fill:#666;"/>
        </HBox>
    </bottom>

</BorderPane>
